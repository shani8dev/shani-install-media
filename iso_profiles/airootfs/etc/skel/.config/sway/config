set $mod Mod4      # Set the modifier key (Super)
set $term foot    # Set the terminal emulator
bindsym $mod+Return exec $term

# Set wallpaper
output * bg /usr/share/backgrounds/shani/saturn-x.png fill

# Auto-launch application as root using sudo -E (if needed)
exec sudo -E os-installer  # Ensure proper sudoers configuration for passwordless execution
